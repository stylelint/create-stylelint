{
	"compilerOptions": {
		"module": "NodeNext",
		"lib": ["ESNext"],
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"allowUnusedLabels": false,
		"allowUnreachableCode": false,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": false,
		"noUnusedParameters": true,
		"noUncheckedIndexedAccess": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"skipLibCheck": true
	},
	"include": ["src"],
	"exclude": ["**/*.test.js"]
}
