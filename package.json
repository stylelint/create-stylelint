{
  "name": "stylelint-create",
  "version": "0.0.1",
  "description": "Initialization wizard for Stylelint, a linter that helps you avoid errors and enforce conventions in your styles.",
  "keywords": [
    "css-in-js",
    "css",
    "less",
    "lint",
    "linter",
    "markdown",
    "sass",
    "scss",
    "stylelint",
    "sugarss"
  ],
  "homepage": "https://github.com/stylelint/stylelint-create#readme",
  "bugs": {
    "url": "https://github.com/stylelint/stylelint-create/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stylelint/stylelint-create.git"
  },
  "funding": {
    "type": "opencollective",
    "url": "https://opencollective.com/stylelint"
  },
  "license": "MIT",
  "author": "stylelint",
  "main": "create-stylelint.mjs",
  "bin": {
    "create-stylelint": "./create-stylelint.mjs"
  },
  "scripts": {
    "format": "prettier . --write --cache",
    "lint": "npm-run-all --parallel --continue-on-error lint:*",
    "lint:formatting": "prettier . --check --cache",
    "lint:js": "eslint . --cache --max-warnings=0 --ext .js,.mjs",
    "lint:md": "remark . --quiet --frail",
    "lint:packagejson": "npmPkgJsonLint .",
    "test": "vitest"
  },
  "prettier": "@stylelint/prettier-config",
  "eslintConfig": {
    "extends": [
      "stylelint"
    ],
    "root": true
  },
  "npmpackagejsonlint": {
    "extends": "@stylelint/npm-package-json-lint-config"
  },
  "remarkConfig": {
    "plugins": [
      "@stylelint/remark-preset"
    ]
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "execa": "^6.1.0",
    "ora": "^6.1.2",
    "which-pm-runs": "^1.1.0"
  },
  "devDependencies": {
    "@stylelint/npm-package-json-lint-config": "^2.0.0",
    "@stylelint/prettier-config": "^2.0.0",
    "@stylelint/remark-preset": "^4.0.0",
    "eslint": "^8.28.0",
    "eslint-config-stylelint": "^17.1.0",
    "jest": "^28.1.3",
    "jest-preset-stylelint": "^5.0.4",
    "npm-run-all": "^4.1.5",
    "remark-cli": "^11.0.0",
    "semver": "^7.3.8",
    "vitest": "^0.28.1"
  },
  "engines": {
    "node": "^14.13.1 || >=16.0.0 || >=18.0.0"
  }
}
